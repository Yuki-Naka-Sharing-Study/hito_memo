<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AllFolderFragment">

    <View
        android:id="@+id/back_to_main_fragment_view"
        android:layout_width="120dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageButton
        android:id="@+id/back_to_main_fragment_image_button"
        android:src="@drawable/back"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/back_to_main_fragment_text_view"
        android:text="フォルダ"
        android:textSize="16sp"
        android:textColor="#4169e1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/back_to_main_fragment_image_button"
        android:layout_marginTop="16dp"
        android:layout_marginStart="4dp"
        />

    <TextView
        android:id="@+id/subete_oomoji_text_view"
        android:text="すべて"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/back_to_main_fragment_image_button"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        />

    <View
        android:id="@+id/search_in_all_folder_view"
        android:background="@drawable/rounded_background_gray"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/subete_oomoji_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="20dp"
        />

    <ImageButton
        android:id="@+id/search_icon_image_button"
        android:src="@drawable/search"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/search_in_all_folder_view"
        app:layout_constraintLeft_toLeftOf="@+id/search_in_all_folder_view"
        app:layout_constraintBottom_toBottomOf="@+id/search_in_all_folder_view"
        android:layout_marginStart="4dp"
        />

    <EditText
        android:id="@+id/search_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="検索"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/search_in_all_folder_view"
        app:layout_constraintLeft_toRightOf="@+id/search_icon_image_button"
        app:layout_constraintTop_toTopOf="@+id/search_in_all_folder_view"
        />

    <ImageButton
        android:id="@+id/hito_memo_image_button_in_fragment_all_folder"
        android:src="@drawable/hito_memo_pro_image_view"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/search_in_all_folder_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/hito_memo_nothing_komoji_text_view"
        android:layout_marginBottom="80dp"
        />

    <TextView
        android:id="@+id/hito_memo_nothing_in_center_text_view"
        android:text="まだ一人もヒトメモがありません。\n右下のプラスボタンからヒトメモを追加しましょう。"
        android:textColor="#d3d3d3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/hito_memo_image_button_in_fragment_all_folder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/hito_memo_nothing_komoji_text_view"
        />

    <TextView
        android:id="@+id/hito_memo_nothing_komoji_text_view"
        android:text="ヒトメモなし"
        android:textSize="8sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"
        />

    <ImageButton
        android:id="@+id/navigate_to_fragment_add_person"
        android:src="@drawable/person_add_blue_ver"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>