<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8ff"
    tools:context=".MainFragment">

    <ImageButton
        android:id="@+id/setting_button"
        android:src="@drawable/settings_blue_ver"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/edit_folders_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/edit_fragment_main"
        android:textSize="20sp"
        android:textColor="#4169e1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        />

    <TextView
        android:id="@+id/folder_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/navigate_to_fragment_new_folder"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black_or_white"
        app:layout_constraintTop_toBottomOf="@+id/setting_button"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        />

    <View
        android:id="@+id/all_folder_view"
        android:background="@drawable/rounded_background_white"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@+id/folder_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="16dp"
        />

    <ImageButton
        android:id="@+id/all_folder_image_view"
        android:src="@drawable/all_folder_blue_ver"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/all_folder_view"
        app:layout_constraintLeft_toLeftOf="@+id/all_folder_view"
        app:layout_constraintBottom_toBottomOf="@+id/all_folder_view"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/all_folder_text_view"
        android:text="すべて"
        android:textSize="12sp"
        android:textColor="@color/black_or_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/all_folder_view"
        app:layout_constraintLeft_toRightOf="@+id/all_folder_image_view"
        app:layout_constraintBottom_toBottomOf="@+id/all_folder_view"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/all_folder_num_text_view"
        android:text="0"
        android:textSize="16sp"
        android:textColor="#808080"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/all_folder_view"
        app:layout_constraintRight_toLeftOf="@+id/see_all_folder_image_button"
        app:layout_constraintBottom_toBottomOf="@+id/all_folder_view"
        android:layout_marginEnd="8dp"
        />

    <ImageButton
        android:id="@+id/see_all_folder_image_button"
        android:src="@drawable/arrow_forward_gray_ver"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/all_folder_view"
        app:layout_constraintRight_toRightOf="@+id/all_folder_view"
        app:layout_constraintBottom_toBottomOf="@+id/all_folder_view"
        android:layout_marginEnd="16dp"
        />

    <ListView
        android:id="@+id/created_folder"
        android:visibility="gone"
        android:background="@drawable/rounded_background_white"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/all_folder_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/new_folder_button"
        android:layout_marginHorizontal="16dp"
        />

    <ImageButton
        android:id="@+id/new_folder_button"
        android:src="@drawable/create_new_folder_blue_ver"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        />

    <ImageButton
        android:id="@+id/add_person_button"
        android:src="@drawable/person_add_blue_ver"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>