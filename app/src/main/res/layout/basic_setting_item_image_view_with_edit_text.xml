<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/basic_setting_item_view"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/basic_setting_item_image_view"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toTopOf="@id/basic_setting_item_view"
        app:layout_constraintLeft_toLeftOf="@id/basic_setting_item_view"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        />

    <EditText
        android:id="@+id/basic_setting_item_edit_text"
        android:gravity="center"
        android:layout_width="160dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toRightOf="@+id/basic_setting_item_image_view"
        app:layout_constraintTop_toTopOf="@id/basic_setting_item_view"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>