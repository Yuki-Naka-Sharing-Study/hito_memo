<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddMemoryFragment">

    <ImageButton
        android:id="@+id/close_add_memory_view_button"
        android:src="@drawable/close_button"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/add_memory_text_view_top_center"
        android:text="出来事を追加"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/add_memory_text_view_top_right_disabled"
        android:text="追加"
        android:textSize="16sp"
        android:textColor="#d3d3d3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        />

    <View
        android:id="@+id/add_memory_view"
        android:background="@drawable/rounded_background_white"
        android:layout_width="128dp"
        android:layout_height="128dp"
        app:layout_constraintTop_toBottomOf="@+id/add_memory_text_view_top_center"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="68dp"
        />



    <View
        android:id="@+id/add_memory_time_view"
        android:background="@drawable/rounded_background_gray"
        android:layout_width="100dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toBottomOf="@+id/add_memory_text_view_top_center"
        app:layout_constraintLeft_toRightOf="@+id/add_memory_view"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/add_memory_time_text_view"
        android:text="2024/06/27"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/add_memory_time_view"
        app:layout_constraintLeft_toLeftOf="@+id/add_memory_time_view"
        app:layout_constraintRight_toRightOf="@+id/add_memory_time_view"
        app:layout_constraintBottom_toBottomOf="@+id/add_memory_time_view"
        />

    <EditText
        android:id="@+id/add_memory_edit_text"
        android:background="@drawable/rounded_background_white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/add_memory_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>