<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_or_dark_background">

    <View
        android:id="@+id/about_this_app_item_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/about_this_app_item_text_view"
        android:text="このアプリについての項目"
        android:textColor="@color/black_or_white"
        android:gravity="center"
        android:visibility="visible"
        android:layout_width="172dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toTopOf="@+id/about_this_app_item_view"
        app:layout_constraintStart_toStartOf="@id/about_this_app_item_view"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        />

    <ImageView
        android:id="@+id/about_this_app_item_image_view"
        android:src="@drawable/ic_launcher_foreground"
        android:gravity="center"
        android:visibility="visible"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/about_this_app_item_view"
        app:layout_constraintRight_toRightOf="@id/about_this_app_item_view"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>