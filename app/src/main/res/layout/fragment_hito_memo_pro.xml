<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8ff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HitoMemoProFragment"
    >

    <ImageButton
        android:id="@+id/back_to_setting_view_image_button"
        android:src="@drawable/back"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        />

    <TextView
        android:id="@+id/back_to_setting_view_text_view"
        android:text="設定"
        android:textSize="16sp"
        android:textColor="#4169e1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/back_to_setting_view_image_button"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/hito_memo_text_view"
        android:text="ヒトメモPRO"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        />

    <View
        android:id="@+id/hito_memo_pro_back_ground_view"
        android:background="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:layout_constraintTop_toBottomOf="@+id/hito_memo_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:id="@+id/hito_memo_pro_image_view"
        android:src="@drawable/hito_memo_pro_image_view"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="@+id/hito_memo_pro_back_ground_view"
        app:layout_constraintLeft_toLeftOf="@+id/hito_memo_pro_back_ground_view"
        app:layout_constraintBottom_toBottomOf="@+id/hito_memo_pro_back_ground_view"
        android:layout_marginVertical="24dp"
        android:layout_marginStart="120dp"
        />

    <TextView
        android:id="@+id/hito_memo_text_view_katakana_in_back_ground"
        android:text="ヒトメモ"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/hito_memo_pro_back_ground_view"
        app:layout_constraintLeft_toRightOf="@+id/hito_memo_pro_image_view"
        app:layout_constraintBottom_toBottomOf="@+id/hito_memo_pro_back_ground_view"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/hito_memo_text_view_alpha_in_back_ground"
        android:text="PRO"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/hito_memo_text_view_katakana_in_back_ground"
        app:layout_constraintLeft_toRightOf="@id/hito_memo_pro_image_view"
        android:layout_marginStart="20dp"
        />

    <ListView
        android:id="@+id/hito_memo_pro_list_view"
        android:divider="@null"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:layout_constraintTop_toBottomOf="@+id/hito_memo_pro_back_ground_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/privacy_policy_text_view"
        android:text="プライバシーポリシー"
        android:textColor="#0000ff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/hito_memo_pro_list_view"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="120dp"
        android:layout_marginStart="80dp"
        />

    <TextView
        android:id="@+id/riyou_text_view"
        android:text="利用規約"
        android:textColor="#0000ff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/hito_memo_pro_list_view"
        app:layout_constraintLeft_toRightOf="@id/privacy_policy_text_view"
        android:layout_marginTop="120dp"
        android:layout_marginStart="48dp"
        />

    <View
        android:id="@+id/monthly_plan_view"
        android:background="@drawable/rounded_background_blue"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        app:layout_constraintTop_toBottomOf="@+id/privacy_policy_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        />

    <TextView
        android:id="@+id/monthly_plan_text_view"
        android:text="月額プラン"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/monthly_plan_view"
        app:layout_constraintLeft_toLeftOf="@+id/monthly_plan_view"
        app:layout_constraintBottom_toBottomOf="@+id/monthly_plan_view"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="28dp"
        />

    <TextView
        android:id="@+id/monthly_plan_yen_mark"
        android:text="¥"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/monthly_plan_view"
        app:layout_constraintRight_toLeftOf="@+id/monthly_plan_yen_num"
        app:layout_constraintBottom_toBottomOf="@+id/monthly_plan_view"
        />

    <TextView
        android:id="@+id/monthly_plan_yen_num"
        android:text="500"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/monthly_plan_view"
        app:layout_constraintRight_toLeftOf="@+id/monthly_plan_month"
        app:layout_constraintBottom_toBottomOf="@+id/monthly_plan_view"
        />

    <TextView
        android:id="@+id/monthly_plan_month"
        android:text="/月"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/monthly_plan_view"
        app:layout_constraintRight_toRightOf="@+id/monthly_plan_view"
        app:layout_constraintBottom_toBottomOf="@+id/monthly_plan_view"
        android:layout_marginEnd="20dp"
        />

    <View
        android:id="@+id/yearly_plan_view"
        android:background="@drawable/rounded_background_blue"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        app:layout_constraintTop_toBottomOf="@+id/monthly_plan_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        />

    <TextView
        android:id="@+id/yearly_plan_text_view"
        android:text="年額プラン"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/yearly_plan_view"
        app:layout_constraintLeft_toLeftOf="@+id/yearly_plan_view"
        app:layout_constraintBottom_toBottomOf="@+id/yearly_plan_view"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="28dp"
        />

    <TextView
        android:id="@+id/yearly_plan_yen_mark"
        android:text="¥"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/yearly_plan_view"
        app:layout_constraintRight_toLeftOf="@+id/yearly_plan_yen_num"
        app:layout_constraintBottom_toBottomOf="@+id/yearly_plan_view"
        />

    <TextView
        android:id="@+id/yearly_plan_yen_num"
        android:text="5000"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/yearly_plan_view"
        app:layout_constraintRight_toLeftOf="@+id/yearly_plan_year"
        app:layout_constraintBottom_toBottomOf="@+id/yearly_plan_view"
        />

    <TextView
        android:id="@+id/yearly_plan_year"
        android:text="/年"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/yearly_plan_view"
        app:layout_constraintRight_toRightOf="@+id/yearly_plan_view"
        app:layout_constraintBottom_toBottomOf="@+id/yearly_plan_view"
        android:layout_marginEnd="20dp"
        />

    <View
        android:id="@+id/konyu_hukugen_view"
        android:background="@drawable/rounded_background_gray"
        android:layout_width="160dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yearly_plan_view"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/konyu_hukugen_text_view"
        android:text="購入を復元する"
        android:textSize="12sp"
        android:textColor="#0000ff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/konyu_hukugen_view"
        app:layout_constraintLeft_toLeftOf="@+id/konyu_hukugen_view"
        app:layout_constraintRight_toRightOf="@+id/konyu_hukugen_view"
        />

</androidx.constraintlayout.widget.ConstraintLayout>