<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/light_or_dark_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/each_folder_background_view"
        android:background="@drawable/rounded_background_white"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageButton
        android:id="@+id/each_folder_image_view"
        android:src="@drawable/all_folder_blue_ver"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/each_folder_background_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/each_folder_background_view"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/each_folder_text_view"
        android:text="新規フォルダ"
        android:textSize="12sp"
        android:textColor="@color/black_or_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/each_folder_image_view"
        app:layout_constraintBottom_toBottomOf="@+id/each_folder_background_view"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/each_folder_num_text_view"
        android:text="0"
        android:textSize="16sp"
        android:textColor="#808080"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/see_each_folder_image_button"
        app:layout_constraintBottom_toBottomOf="@+id/each_folder_background_view"
        android:layout_marginEnd="8dp"
        />

    <ImageButton
        android:id="@+id/see_each_folder_image_button"
        android:src="@drawable/arrow_forward_gray_ver"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/each_folder_background_view"
        android:layout_marginEnd="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>