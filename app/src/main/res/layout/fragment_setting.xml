<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".SettingFragment">

    <ScrollView
        android:id="@+id/setting_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/setting_constraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <View
                android:id="@+id/setting_hedder_gray_background_view"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#696969"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <ImageView
                android:id="@+id/close_setting_view_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <TextView
                android:id="@+id/title_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/title_setting"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <View
                android:id="@+id/hito_memo_pro_view"
                android:layout_width="match_parent"
                android:layout_height="232dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="48dp"
                android:layout_marginRight="16dp"
                app:layout_constraintTop_toBottomOf="@+id/title_setting"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <TextView
                android:id="@+id/security_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:text="セキュリティ"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/hito_memo_pro_view"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <ListView
                android:id="@+id/security_list_view"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/rounded_background"
                app:layout_constraintTop_toBottomOf="@+id/security_text_view"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                />

            <TextView
                android:id="@+id/basic_setting_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="基本設定"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/security_list_view"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <ListView
                android:id="@+id/basic_setting_list_view"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/rounded_background"
                app:layout_constraintTop_toBottomOf="@+id/basic_setting_text_view"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                android:layout_marginHorizontal="16dp"
                />

            <TextView
                android:id="@+id/notification_setting_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通知設定"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/basic_setting_list_view"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                />

            <ListView
                android:id="@+id/notification_setting_list_view"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/rounded_background"
                app:layout_constraintTop_toBottomOf="@+id/notification_setting_text_view"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                android:layout_marginHorizontal="16dp"
                />

            <TextView
                android:id="@+id/model_change_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="機種変更"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/notification_setting_list_view"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                />

            <ListView
                android:id="@+id/model_change_list_veiw"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/rounded_background"
                app:layout_constraintTop_toBottomOf="@+id/model_change_text_view"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                android:layout_marginHorizontal="16dp"
                />

            <TextView
                android:id="@+id/about_this_app_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="このアプリについて"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/model_change_list_veiw"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                />

            <ListView
                android:id="@+id/about_this_app_list_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/rounded_background"
                app:layout_constraintTop_toBottomOf="@+id/about_this_app_text_view"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginHorizontal="16dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>