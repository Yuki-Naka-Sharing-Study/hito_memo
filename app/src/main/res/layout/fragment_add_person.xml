<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_add_person"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8ff"
    tools:context=".AddPersonFragment"
    >

    <TextView
        android:id="@+id/text_view_cancel_add_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/cancel_add_person"
        android:textColor="#4169e1"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/text_view_add_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/add_person"
        android:textColor="#4169e1"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/image_view_add_image_of_person"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="72dp"
        android:src="@drawable/add_image_of_person"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggle_button_profile_and_memo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"

        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_background_white"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_view_add_image_of_person">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/toggle_button_profile"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="0dp"
            android:text="プロフィール"
            android:textColor="@color/black"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/toggle_button_memo"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="0dp"
            android:text="メモ"
            android:textColor="@color/black"
            />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <ScrollView
        android:id="@+id/scroll_view_of_profile_and_memo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_background_white"
        android:layerType="software"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toggle_button_profile_and_memo">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_orientation_vertical_scrollview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/name_constraint_orientation_horizontal_scrollview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/constraint_orientation_vertical_scrollview">

                <TextView
                    android:id="@+id/name_text_view_scroll_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="4dp"
                    android:text="名前"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@+id/name_constraint_orientation_horizontal_scrollview"
                    app:layout_constraintTop_toTopOf="@+id/name_constraint_orientation_horizontal_scrollview" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/name_guideline"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.4" />

                <EditText
                    android:id="@+id/name_edit_text_scroll_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="田中太郎"
                    android:paddingTop="4dp"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@+id/name_guideline"
                    app:layout_constraintTop_toTopOf="@+id/name_constraint_orientation_horizontal_scrollview" />

                <View
                    android:id="@+id/name_view_scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="8sp"
                    android:background="#999999"
                    app:layout_constraintTop_toBottomOf="@+id/name_text_view_scroll_view" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/hurigana_constraint_orientation_horizontal_scrollview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/name_constraint_orientation_horizontal_scrollview">

                <TextView
                    android:id="@+id/hurigana_text_view_scroll_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="4dp"
                    android:text="フリガナ"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@+id/hurigana_constraint_orientation_horizontal_scrollview"
                    app:layout_constraintTop_toTopOf="@+id/hurigana_constraint_orientation_horizontal_scrollview" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/hurigana_guideline"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.4" />

                <EditText
                    android:id="@+id/hurigana_edit_text_scroll_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="タナカタロウ"
                    android:paddingTop="4dp"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@+id/hurigana_guideline"
                    app:layout_constraintTop_toTopOf="@+id/hurigana_guideline" />

                <View
                    android:id="@+id/hurigana_view_scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="8sp"
                    android:background="#999999"
                    app:layout_constraintTop_toBottomOf="@+id/hurigana_text_view_scroll_view" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/nickname_constraint_orientation_horizontal_scrollview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/hurigana_constraint_orientation_horizontal_scrollview">

                <TextView
                    android:id="@+id/nickname_text_view_scroll_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="4dp"
                    android:text="ニックネーム"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@+id/nickname_constraint_orientation_horizontal_scrollview"
                    app:layout_constraintTop_toTopOf="@+id/nickname_constraint_orientation_horizontal_scrollview" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/nickname_guideline"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.4" />

                <EditText
                    android:id="@+id/nickname_edit_text_scroll_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="ニックネーム"
                    android:paddingTop="4dp"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@+id/nickname_guideline"
                    app:layout_constraintTop_toTopOf="@+id/nickname_guideline" />

                <View
                    android:id="@+id/nickname_view_scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="8sp"
                    android:background="#999999"
                    app:layout_constraintTop_toBottomOf="@+id/nickname_text_view_scroll_view" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sex_constraint_orientation_horizontal_scrollview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/nickname_constraint_orientation_horizontal_scrollview">

                <TextView
                    android:id="@+id/sex_text_view_scroll_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="4dp"
                    android:text="性別"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@+id/sex_constraint_orientation_horizontal_scrollview"
                    app:layout_constraintTop_toTopOf="@+id/sex_constraint_orientation_horizontal_scrollview" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/sex_guideline"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.4" />

                <EditText
                    android:id="@+id/sex_edit_text_scroll_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="未選択"
                    android:paddingTop="4dp"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@+id/sex_guideline"
                    app:layout_constraintTop_toTopOf="@+id/sex_guideline" />

                <View
                    android:id="@+id/sex_view_scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="8sp"
                    android:background="#999999"
                    app:layout_constraintTop_toBottomOf="@+id/sex_text_view_scroll_view" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/birthday_constraint_orientation_horizontal_scrollview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/sex_constraint_orientation_horizontal_scrollview">

                <TextView
                    android:id="@+id/birthday_text_view_scroll_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="4dp"
                    android:text="誕生日"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@+id/birthday_constraint_orientation_horizontal_scrollview"
                    app:layout_constraintTop_toTopOf="@+id/birthday_constraint_orientation_horizontal_scrollview" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/birthday_guideline"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.4" />

                <EditText
                    android:id="@+id/birthday_edit_text_scroll_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="2000年1月1日"
                    android:paddingTop="4dp"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@+id/birthday_guideline"
                    app:layout_constraintTop_toTopOf="@+id/birthday_guideline" />

                <View
                    android:id="@+id/birthday_view_scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="8sp"
                    android:background="#999999"
                    app:layout_constraintTop_toBottomOf="@+id/birthday_text_view_scroll_view" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/origin_constraint_orientation_horizontal_scrollview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/birthday_constraint_orientation_horizontal_scrollview">

                <TextView
                    android:id="@+id/origin_text_view_scroll_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="4dp"
                    android:text="出身地"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@+id/origin_constraint_orientation_horizontal_scrollview"
                    app:layout_constraintTop_toTopOf="@+id/origin_constraint_orientation_horizontal_scrollview" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/origin_guideline"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.4" />

                <EditText
                    android:id="@+id/origin_edit_text_scroll_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="秋田県"
                    android:paddingTop="4dp"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@+id/origin_guideline"
                    app:layout_constraintTop_toTopOf="@+id/origin_guideline" />

                <View
                    android:id="@+id/origin_view_scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="8sp"
                    android:background="#999999"
                    app:layout_constraintTop_toBottomOf="@+id/origin_text_view_scroll_view" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/address_constraint_orientation_horizontal_scrollview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/origin_constraint_orientation_horizontal_scrollview">

                <TextView
                    android:id="@+id/address_text_view_scroll_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="4dp"
                    android:text="住所"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@+id/address_constraint_orientation_horizontal_scrollview"
                    app:layout_constraintTop_toTopOf="@+id/address_constraint_orientation_horizontal_scrollview" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/address_guideline"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.4" />

                <EditText
                    android:id="@+id/address_edit_text_scroll_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="東京都"
                    android:paddingTop="4dp"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@+id/address_guideline"
                    app:layout_constraintTop_toTopOf="@+id/address_guideline" />

                <View
                    android:id="@+id/address_view_scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="8sp"
                    android:background="#999999"
                    app:layout_constraintTop_toBottomOf="@+id/address_text_view_scroll_view" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/occupation_constraint_orientation_horizontal_scrollview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/address_constraint_orientation_horizontal_scrollview">

                <TextView
                    android:id="@+id/occupation_text_view_scroll_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="4dp"
                    android:text="職業"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@+id/occupation_constraint_orientation_horizontal_scrollview"
                    app:layout_constraintTop_toTopOf="@+id/occupation_constraint_orientation_horizontal_scrollview" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/occupation_guideline"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.4" />

                <EditText
                    android:id="@+id/occupation_edit_text_scroll_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="エンジニア"
                    android:paddingTop="4dp"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@+id/occupation_guideline"
                    app:layout_constraintTop_toTopOf="@+id/occupation_guideline" />

                <View
                    android:id="@+id/occupation_view_scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="8sp"
                    android:background="#999999"
                    app:layout_constraintTop_toBottomOf="@+id/occupation_text_view_scroll_view" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/relationship_constraint_orientation_horizontal_scrollview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/occupation_constraint_orientation_horizontal_scrollview">

                <TextView
                    android:id="@+id/relationship_text_view_scroll_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="4dp"
                    android:text="関係"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@+id/relationship_constraint_orientation_horizontal_scrollview"
                    app:layout_constraintTop_toTopOf="@+id/relationship_constraint_orientation_horizontal_scrollview" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/relationship_guideline"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.4" />

                <EditText
                    android:id="@+id/relationship_edit_text_scroll_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="会社の同僚"
                    android:paddingTop="4dp"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@+id/relationship_guideline"
                    app:layout_constraintTop_toTopOf="@+id/relationship_guideline" />

                <View
                    android:id="@+id/relationship_view_scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="8sp"
                    android:background="#999999"
                    app:layout_constraintTop_toBottomOf="@+id/relationship_text_view_scroll_view" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/folder_constraint_orientation_horizontal_scrollview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/relationship_constraint_orientation_horizontal_scrollview">

                <TextView
                    android:id="@+id/folder_text_view_scroll_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="4dp"
                    android:text="フォルダ"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@+id/folder_constraint_orientation_horizontal_scrollview"
                    app:layout_constraintTop_toTopOf="@+id/folder_constraint_orientation_horizontal_scrollview" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/folder_guideline"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.4" />

                <EditText
                    android:id="@+id/folder_edit_text_scroll_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="未選択"
                    android:paddingTop="4dp"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@+id/folder_guideline"
                    app:layout_constraintTop_toTopOf="@+id/folder_guideline" />

                <View
                    android:id="@+id/folder_view_scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="8sp"
                    android:background="#999999"
                    app:layout_constraintTop_toBottomOf="@+id/folder_text_view_scroll_view" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/telephone_number_constraint_orientation_horizontal_scrollview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/folder_constraint_orientation_horizontal_scrollview">

                <TextView
                    android:id="@+id/telephone_number_text_view_scroll_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="4dp"
                    android:text="電話番号"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@+id/telephone_number_constraint_orientation_horizontal_scrollview"
                    app:layout_constraintTop_toTopOf="@+id/telephone_number_constraint_orientation_horizontal_scrollview" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/telephone_number_guideline"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.4" />

                <EditText
                    android:id="@+id/telephone_number_edit_text_scroll_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="080-1234-1234"
                    android:paddingTop="4dp"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@+id/telephone_number_guideline"
                    app:layout_constraintTop_toTopOf="@+id/telephone_number_guideline" />

                <View
                    android:id="@+id/telephone_number_view_scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="8sp"
                    android:background="#999999"
                    app:layout_constraintTop_toBottomOf="@+id/telephone_number_text_view_scroll_view" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/email_constraint_orientation_horizontal_scrollview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/telephone_number_constraint_orientation_horizontal_scrollview">

                <TextView
                    android:id="@+id/email_text_view_scroll_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="4dp"
                    android:text="Email"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@+id/email_constraint_orientation_horizontal_scrollview"
                    app:layout_constraintTop_toTopOf="@+id/email_constraint_orientation_horizontal_scrollview" />

