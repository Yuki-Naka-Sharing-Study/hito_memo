<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_new_folder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8ff"
    tools:context=".NewFolderFragment">

    <TextView
        android:id="@+id/text_view_cancel_new_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel_new_folder"
        android:textSize="16sp"
        android:textColor="#4169e1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/title_new_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_new_folder"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/text_view_complete_new_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/complete_new_folder"
        android:textSize="16sp"
        android:textColor="#4169e1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        />

    <View
        android:id="@+id/create_new_folder_background_view"
        android:background="@drawable/rounded_background_white"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@+id/text_view_complete_new_folder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="16dp"
        />

    <EditText
        android:id="@+id/edit_text_add_new_folder"
        android:background="@null"
        android:inputType="text"
        android:text="@string/edit_name_of_new_folder"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/create_new_folder_background_view"
        app:layout_constraintBottom_toBottomOf="@+id/create_new_folder_background_view"
        app:layout_constraintLeft_toLeftOf="@id/create_new_folder_background_view"
        android:layout_marginHorizontal="16dp"
        />

    <ImageButton
        android:id="@+id/cancel_new_folder_button"
        android:src="@drawable/cancel_button"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/edit_text_add_new_folder"
        app:layout_constraintRight_toRightOf="@+id/create_new_folder_background_view"
        app:layout_constraintBottom_toBottomOf="@+id/edit_text_add_new_folder"
        android:layout_marginHorizontal="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>