<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_new_folder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_or_dark_background"
    tools:context=".NewFolderFragment">

    <TextView
        android:id="@+id/text_view_cancel_new_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel_new_folder"
        android:textSize="16sp"
        android:textColor="@color/blue_or_light_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/title_new_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_new_folder"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black_or_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/text_view_complete_new_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/complete_new_folder"
        android:textSize="16sp"
        android:textColor="@color/blue_or_light_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        />

    <EditText
        android:id="@+id/edit_text_add_new_folder"
        android:background="@drawable/light_or_dark_rounded_background"
        android:inputType="text"
        android:gravity="center_vertical"
        android:text="新規フォルダ"
        android:textColor="@color/black_or_white"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/title_new_folder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="16dp"
        />

    <ImageButton
        android:id="@+id/cancel_new_folder_button"
        android:src="@drawable/cancel_button"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/edit_text_add_new_folder"
        app:layout_constraintRight_toRightOf="@+id/edit_text_add_new_folder"
        app:layout_constraintBottom_toBottomOf="@+id/edit_text_add_new_folder"
        android:layout_marginHorizontal="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>