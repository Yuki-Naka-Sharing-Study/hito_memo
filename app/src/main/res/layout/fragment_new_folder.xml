<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_new_folder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".NewFolderFragment">

    <TextView
        android:id="@+id/text_view_cancel_new_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel_new_folder"
        android:textSize="16sp"
        android:textColor="#00AEEF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/title_new_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_new_folder"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/text_view_complete_new_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/complete_new_folder"
        android:textSize="16sp"
        android:textColor="#00AEEF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        />

    <EditText
        android:id="@+id/edit_text_add_new_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="@string/edit_name_of_new_folder"
        app:layout_constraintTop_toBottomOf="@+id/title_new_folder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="56dp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="87dp"
        />

    <ImageButton
        android:id="@+id/delete_new_folder_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_delete"
        app:layout_constraintTop_toBottomOf="@+id/title_new_folder"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="100dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>